{
  "manifest_version": 3,
  "name": "MalScan",
  "version": "1.0",
  "permissions": [
    "downloads",
    "storage",
    "notifications",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [ 
     "https://www.virustotal.com/*"
],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
